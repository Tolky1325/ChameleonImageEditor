@{
    ViewData["Title"] = "Authorization Page";
    Layout = "~/Views/Shared/_LayoutGuest.cshtml";
}

<div class="content-container2">
    <img src="~/images/Font-Shapes/Authorization-circle.svg" class="shape shape9" />
    <img src="~/images/Font-Shapes/Authorization-circle2.svg" class="shape shape10" />
    <img src="~/images/Font-Shapes/Authorization-circle.svg" class="shape shape11" />
    <img src="~/images/Font-Shapes/Flower_Authorization.svg" class="shape shape12" />
    <img src="~/images/Font-Shapes/Square_Authorization.svg" class="shape shape13" />
    <img src="~/images/Font-Shapes/Square45_Authorization.svg" class="shape shape14" />
    <img src="~/images/Font-Shapes/Circle_Authorization.svg" class="shape shape15" />
    <img src="~/images/Font-Shapes/12-sided_cookie_Authorization.svg" class="shape shape16" />
    <img src="~/images/Font-Shapes/Circle2_Authorization.svg" class="shape shape17" />
    <img src="~/images/Font-Shapes/Pill_Authorization.svg" class="shape shape18" />

    <img src="~/images/Font-Shapes/Authorization-frame-top.svg" class="shape shape_top" />
    <img src="~/images/Font-Shapes/Authorization-frame-bottom.svg" class="shape shape_bottom" />

    <div class="login-content">
        <h2 class="text-authorization">Authorization</h2>
    </div>

    <form class="auth-form">

        <div class="input-group">
            <input type="text" id="name" name="username" placeholder=" " required>
            <label id="username_label">Username</label>
        </div>

        <div class="input-group">
            <input type="password" id="password" name="password" placeholder=" " required>
            <label id="password_label">Password</label>
        </div>

        <button class="button-sig_in" type="submit">
            Sign in
            <span class="material-symbols-outlined">
                login
            </span>
        </button>

        <div class="form_login-content">
            <h4 class="text-authorization_info">Still haven`t an account?</h4>
            <a asp-controller="Account" asp-action="Registration"
            class="text-authorization_a @(ViewContext.RouteData.Values["controller"]?.ToString() == "Registration" ? "active" : "")">

                Registration
                </a>
        </div>
    </form>

</div>