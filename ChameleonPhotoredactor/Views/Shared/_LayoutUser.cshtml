<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Chameleon Editor</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/library.css" />

    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@40,400,0,0" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;700&display=swap" rel="stylesheet">
    <script src="~/js/site.js"></script>
</head>

<body>
    <div class="guest-layout">
        <nav class="guest-nav">

            <a asp-controller="Library" asp-action="Library"
                class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Library" &&
                                                    ViewContext.RouteData.Values["action"]?.ToString() == "Library" ? "active" : "")">
                <div class="icon-container">
                    <span class="material-symbols-outlined" style="font-size: 24px;">art_track</span>
                </div>
                Library
            </a>

            <a asp-controller="Leaderboard" asp-action="Leaderboard"
                class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Leaderboard" &&
                                                    ViewContext.RouteData.Values["action"]?.ToString() == "Leaderboard" ? "active" : "")">
                <div class="icon-container">
                    <span class="material-symbols-outlined" style="font-size: 24px;">Leaderboard</span>
                </div>
                Top
            </a>

            <a asp-controller="Account" asp-action="Profile"
                class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Profile" &&
                                                    ViewContext.RouteData.Values["action"]?.ToString() == "Profile" ? "active" : "")">
                <div class="icon-container">
                    <span class="material-symbols-outlined">account_circle</span>
                </div>
                Profile
            </a>


        </nav>

        <div class="editor-right-panel">
            <div class="histogram">
                <span class="material-symbols-outlined" style="font-size: 32px;">bar_chart</span>
                <p>Histogram</p>
            </div>

            <div class="info-block">
                <p>ƒ/1.8 · 1/500 · ISO 400 · 1600×800 px · png</p>
            </div>

            <div class="info-block">
                <p>Exposure: +40</p>
                <p>Contrast: +30</p>
            </div>
            
            <div class="Library_button-group">
                <a asp-controller="FullEditor" asp-action="FullEditor" class="library_button">
                    Edit
                    <span class="material-symbols-outlined discover_tune-rotate">discover_tune</span>
                </a>

                <a asp-controller="FullEditor" asp-action="FullEditor" class="library_button">
                    Export
                    <span class="material-symbols-outlined">download</span>
                </a>


                <a asp-controller="FullEditor" asp-action="FullEditor" class="library_button">
                    Delete
                    <span class="material-symbols-outlined">delete</span>
                </a>

            </div>

        </div>

        <main class="guest-main">
            @RenderBody()
        </main>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>