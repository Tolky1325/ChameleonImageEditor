<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Chameleon Editor</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@40,400,0,0" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;700&display=swap" rel="stylesheet">


    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/guest.css" />
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="~/css/editor.css" />

    <script src="~/js/site.js"></script>
</head>

<body>
    <div class="guest-layout">
        <nav class="guest-nav">
            <a asp-controller="Home" asp-action="Index"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")">
                <div class="logo-container">
                    <img class="logo-img" src="/images/logo.png" alt="Chameleon" width="50" />
                </div>
                Home
            </a>

            <a asp-controller="Account" asp-action="Login"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Account" ? "active" : "")">
                <div class="login-container">
                    <span class="material-symbols-outlined" style="font-size: 24px;">login</span>
                </div>
                Sign in
            </a>
        </nav>

        <main class="guest-main">
            @RenderBody()
            @RenderSection("Scripts", required: false)
        </main>
    </div>

    <footer>
        <p>&copy; Chameleon 2025 - Your Photo Editor</p>
    </footer>
</body>
</html>